{
  "tests": [
    {
      "name": "Get sitemap XML",
      "method": "GET",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Content-Type": "application/xml"
      },
      "bodyMatcher": "contains",
      "expectedBody": "<?xml version=\"1.0\" encoding=\"UTF-8\"?>"
    },
    {
      "name": "Sitemap contains urlset",
      "method": "GET",
      "path": "/",
      "expectedStatus": 200,
      "bodyMatcher": "contains",
      "expectedBody": "<urlset xmlns=\"http://www.sitemaps.org/schemas/sitemap/0.9\""
    },
    {
      "name": "Sitemap contains main pages",
      "method": "GET",
      "path": "/",
      "expectedStatus": 200,
      "bodyMatcher": "contains",
      "expectedBody": "<loc>https://yoursite.poehali.dev/</loc>"
    },
    {
      "name": "Sitemap contains episodes page",
      "method": "GET",
      "path": "/",
      "expectedStatus": 200,
      "bodyMatcher": "contains",
      "expectedBody": "<loc>https://yoursite.poehali.dev/episodes</loc>"
    },
    {
      "name": "Sitemap contains blog page",
      "method": "GET",
      "path": "/",
      "expectedStatus": 200,
      "bodyMatcher": "contains",
      "expectedBody": "<loc>https://yoursite.poehali.dev/blog</loc>"
    },
    {
      "name": "Handle OPTIONS for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, OPTIONS"
      }
    },
    {
      "name": "Reject POST method",
      "method": "POST",
      "path": "/",
      "expectedStatus": 405,
      "expectedBody": {
        "error": "Method not allowed"
      },
      "bodyMatcher": "partial"
    }
  ]
}
